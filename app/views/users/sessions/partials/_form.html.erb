<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper auth-page">
    <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
      <div class="row w-100">
        <div class="col-lg-4 mx-auto">
          <%= image_tag('backArrow.png', size: "50x50", id: "backArrow") %>
          <div class="auto-form-wrapper">
            <form action="#">
              <div class="form-group">
                <label class="label">Correo Electrónico</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Correo Electrónico" %>
              </div>
              <div class="form-group">
                <label class="label">Contraseña</label>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "***********" %>
              </div>
              <div class="form-group">
                <%= f.submit "Ingresar", class: "btn btn-primary submit-btn btn-block", id: "signin_button" %>
              </div>
              <div class="form-group d-flex justify-content-between">
                <div class="form-check form-check-flat mt-0">
                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me, class: "form-check-input" %>
                      <label class="label">Recordarme</label>
                    </div>
                  <% end -%>
                </div>
                <%= link_to "¿Olvidó su contraseña?", new_password_path(resource_name), class: "text-small forgot-password text-black", id: "forgot_password_link"%>
              </div>
              <div class="text-block text-center my-3">
                <span class="text-small font-weight-semibold">¿No lo recuerda?</span>
                <%= link_to "Crear nueva cuenta", new_registration_path(resource_name), class: "text-black text-small", id: "new_account_link" %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<script>
  $(function() {
    $('#backArrow').on('click', function () {
      document.location.href="/";
    });
  });
</script>