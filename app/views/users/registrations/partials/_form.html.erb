<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper auth-page">
    <div class="content-wrapper d-flex align-items-center auth register-bg-1 theme-one">
      <div class="row w-100">
        <div class="col-lg-4 mx-auto">
          <%= image_tag('backArrow.png', size: "50x50", id: "backArrow") %>
          <div class="auto-form-wrapper">
            <h2 class="text-center mb-4">Registrarse</h2>
            <form action="#">
              <div class="form-group">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Nombre Completo", id: "name" %>
                <label id="name_error"></label>
              </div>
              
              <div class="form-group">
                <%= f.text_field :email, autofocus: true, autocomplete: "email", id: "email", class: "form-control", placeholder: "Correo Electrónico", data: {users: User.all.to_json } %>
                <label id="email_error"></label>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña", id: "password" %>
                <label id="password_error"></label>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar Contraseña", id: "confirmation" %>
                <label id="confirmation_error"></label>
              </div>
              <div class="form-group">
                <%= f.submit "Registrarse", id: 'btn_submit', class: "btn btn-primary submit-btn btn-block" %>
              </div>
              <div class="text-block text-center my-3">
                <span class="text-small font-weight-semibold">¿ Ya tienes una cuenta ?</span>
                <%= link_to "Iniciar Sesión", new_session_path(resource_name), class: "text-black text-small" %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  onInput("name");
  onInput("identification");
  onInput("email");
  onInput("password");
  onInput("confirmation");
  $(function() {
    $('#backArrow').on('click', function () {
      document.location.href="/";
    });
  });
</script>