<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper auth-page">
    <div class="content-wrapper d-flex align-items-center auth password-bg-1 theme-one">
      <div class="row w-100">
        <div class="col-lg-4 mx-auto">
          <%= image_tag('backArrow.png', size: "50x50", id: "backArrow") %>
          <div class="auto-form-wrapper">
            <h2 class="text-center mb-4">¿Olvidó su contraseña?</h2>
            <form action="#">
              <div class="form-group">
                <label class="label">Correo Electrónico</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Correo Electrónico" %>
              </div>
              <div class="form-group">
                <%= f.submit "Enviar", class: "btn btn-primary submit-btn btn-block" %>
              </div>
              <div class="form-group">
                <%= link_to "Crear nueva cuenta", new_registration_path(resource_name), class: "text-black text-small" %><br>
                <%= link_to "Iniciar Sesión", new_session_path(resource_name), class: "text-black text-small" %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(function() {
    $('#backArrow').on('click', function () {
      document.location.href="/";
    });
  });
</script>