<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper auth-page">
      <div class="content-wrapper d-flex align-items-center auth password-bg-1 theme-one">
        <div class="row w-100">
          <div class="col-lg-4 mx-auto">
            <h2 class="text-center mb-4">¿Olvidó su contraseña?</h2>
            <div class="auto-form-wrapper">
              <form action="#">
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar Contraseña" %>
                </div>
                <div class="form-group">
                  <%= f.submit "Cambiar Contraseña", class: "btn btn-primary submit-btn btn-block" %>
                </div>
                <div class=" my-3">
                  <%= link_to "Iniciar Sesión", new_session_path(resource_name), class: "text-black text-small" %><br>
                  <%= link_to "Registrarse",  new_registration_path(resource_name), class: "text-black text-small" %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
