<div class="fields nested-fields text-center">
  <div class="row">
	<div class="col-lg-2 mb-2 mt-2">
	  <p class="d-md-none font-weight-bold">Tipo</p>
	  <%= f.select(:name, ["Diario Guardas", "Diario Mantenimiento"], {}, { class: "form-control" }) %>
	</div>
	<div class="col-lg-2 col-md-4 mt-2">
	  <p class="d-md-none font-weight-bold">Turnos</p>
	  <%= f.text_field :shifts, class: "form-control", placeholder: "2" %>
	</div>
	<div class="col-lg-3 col-md-4 mb-2 mt-2">
	  <p class="d-md-none font-weight-bold">Horas Turno</p>
	  <%= f.text_field :hours, class: "form-control", placeholder: "12" %>
	</div>
	<div class="col-lg-3 col-md-4 mt-2">
	  <p class="d-md-none font-weight-bold">Trabajadores Turno</p>
	  <%= f.text_field :workers, class: "form-control", placeholder: "3" %>
	</div>
	<div class="col-lg-2 col-md-4 mt-2">
	   <%= link_to_remove_association "", f, class: "fas fa-trash-alt", id: 'remove_link', style: "color: black" %>
	</div>
  </div>
</div>