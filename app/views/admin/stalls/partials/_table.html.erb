<div class="card">
  <div class="card-body">
    <div class="row mt-1 d-none d-md-flex text-center" style="">
      <div class="th col-12 col-md-4">
        <p class="text-uppercase">Nombre</p>
      </div>
      <div class="th col-12 col-md-4">
        <p class="text-uppercase">Cliente</p>
      </div>
      <div class="th col-12 col-md-4">
        <p class="text-uppercase">Acciones</p>
      </div>
    </div>
    <% if @stalls%>
      <% @stalls.each do |stall| %>
        <div class="row tb_body">
          <div class="td col-12 col-md-4  pt-md-3">
            <p class="d-md-none font-weight-bold">Nombre:</p>
            <p class="text-md-center mt-2"><%= link_to(stall.name, admin_stall_path(stall), class:'', title: 'Ver Puesto')%></p>
          </div>
          <div class="th col-12 col-md-4 pt-md-3">
            <p class="d-md-none font-weight-bold">Cliente:</p>
            <p class="text-md-center mt-2"><%= stall.customer.tradename %></p>
          </div>
          <div class="th text-center col-md-4">
            <div class="mt-2 mb-2 btn-group">
              <%= link_to(edit_admin_stall_path(stall), class:'btn btn-block primary-btn mt-2', title: 'Editar Puesto') do %>
                <i class="fa fa-pencil-alt"></i>
              <% end -%>
              <button type="button" class="btn btn-block delete-btn" data-toggle="modal" title="Eliminar Puesto" data-target="#deleteStall<%= stall.id %>">
                <i class="fa fa-times"></i>
              </button>
            </div>
          </div>
        </div>
        <%= render 'admin/stalls/partials/delete_modal', stall: stall %>
      <% end %>
    <%end %>
  </div>
</div>