<div class="card">
  <div class="card-body">
    <% if @stall.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@stall.errors.count, "error") %> impidió que este cliente fuera guardado :</h2>

        <ul>
        <% @stall.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row form_fieldset">
      <div class="col-lg-6 mb-2 mt-2">
        <label for="">Nombre</label>
        <%= form.text_field :name, class: "form-control", placeholder: "Nombre" %>
      </div>
      <div class="col-lg-6 mb-2 mt-2">
        <label for="">Descripción</label>
        <%= form.text_field :description, class: "form-control", placeholder: "Nombre Comercial" %>
      </div>
      <div class="col-lg-6 mb-2 mt-2">
        <label for="">Centro de Costos</label>
        <%= form.collection_select :cost_center_id, CostCenter.all.order(name: :asc), :id, :name, options = {}, html_options = {class: "form-control"}%>
      </div>
    </div>
    
    <%= form.submit "Guardar", class: "btn btn-success" %>
    <%= link_to('Cancelar', admin_stalls_path, class: 'btn btn-light ml-3')%>
  </div>
</div>