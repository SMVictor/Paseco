<div class="row">
  <div class="col-12">
    <p id="notice"><%= notice %></p>
    <h2>Información del Puesto</h2><br>
  </div>
</div>

<div class="row form_fieldset">
  <div  class="col-12 mt-2 mb-2">
    <legend>Información General</legend>
  </div>
  <div class="col-sm-4 mb-2 mt-2">
    <strong>Nombre:</strong>
    <p><%= @stall.name %></p>
  </div>
  <div class="col-sm-4 mb-2 mt-2">
    <strong>Descripción:</strong>
    <p><%= @stall.description %></p>
  </div>
  <div class="col-sm-4 mb-2 mt-2">
    <strong>Cliente:</strong>
    <p><%= @stall.customer.tradename if @stall.customer %></p>
  </div>
  <div class="col-sm-4 mb-2 mt-2">
    <strong>Provincia:</strong>
    <p><%= @stall.province %></p>
  </div>
  <div class="col-sm-4 mb-2 mt-2">
    <strong>Cantón:</strong>
    <p><%= @stall.canton %></p>
  </div>
  <div class="col-sm-4 mb-2 mt-2">
    <strong>Distrito:</strong>
    <p><%= @stall.district %></p>
  </div>
  <div class="col-sm-4 mb-2 mt-2">
    <strong>Otras Señas:</strong>
    <p><%= @stall.other %></p>
  </div>
</div>
<div class="row form_fieldset">
  <div  class="col-12 mt-2 mb-2">
    <legend>Información de los Recorridos</legend>
  </div>
  <div class="col-sm-4 mb-2 mt-2">
    <strong>Viático Diario:</strong>
    <p><%= @stall.daily_viatical %></p>
  </div>
  <div class="col-sm-4  mb-2 mt-2">
    <strong>Cantidad de Puestos:</strong>
    <p><%= @stall.substalls %></p>
  </div>
  <div class="col-sm-4  mb-2 mt-2">
    <strong>Turno Extra:</strong>
    <p><%= @stall.extra_shift %></p>
  </div>
</div>
<%= link_to 'Editar', admin_edit_inactive_stall_path(@stall) %> |
<%= link_to 'Atrás', admin_inactive_stalls_path %>