<div class="card">
  <div class="card-body">
    <div class="row mt-1 ml-1  mr-1 pt-3 tbl_head d-none d-md-flex text-center" style="">
      <div class="col-12 col-md-3">
        <p class="text-uppercase">Nombre</p>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-uppercase">Fecha de Inicio</p>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-uppercase">Fecha de Fin</p>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-uppercase">Acciones</p>
      </div>
    </div>
    <% if @payroles%>
      <% @payroles.each do |payrole| %>
          <div class="row ml-1 mr-1 tbl_row"  style="">
          <div class="col-12 col-md-3  pt-md-3">
            <p class="d-md-none font-weight-bold">Nombre</p>
            <p class="text-md-center"><%= payrole.name %></p>
          </div>
          <div class="col-12 col-md-3 pt-md-3">
            <p class="d-md-none font-weight-bold">Fecha de Inicio</p>
            <p class="text-md-center"><%= payrole.start_date %></p>
          </div>
          <div class="col-12 col-md-3 pt-md-3">
            <p class="d-md-none font-weight-bold">Fecha de Fin</p>
            <p class="text-md-center"><%= payrole.end_date %></p>
          </div>
          <div class="col-12 col-md-3">
            <p class="d-sm-none font-weight-bold">Acciones</p>
            <div class="row">
              <div class="col-11 d-flex justify-content-center">
                <%= link_to('Ver',admin_payrole_path(payrole), class:'btn btn-block info-btn mt-2 mb-lg-2' )%>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <%end %>
  </div>
</div>