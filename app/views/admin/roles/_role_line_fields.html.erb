<div class="col-12 fields nested-fields text-center tbl_row">
  <div class="row">
    <%= f.hidden_field :stall_id, value:  @stall.id %>
    <div class="col-xl-2 col-lg-6 mb-2 pt-md-3">
      <p class="d-md-none font-weight-bold">Fecha</p>
      <%= f.text_field :date, id: "date", placeholder: "dd / mm / aaaa", autocomplete: "off", class: "form-control", "data-date-format": 'dd/mm/yyyy', "data-provide": 'datepicker' %>
    </div>
    <div class="col-xl-3 col-lg-6 mb-2 pt-md-3">
      <p class="d-md-none font-weight-bold">Empleado</p>
      <%= f.collection_select :employee_id, @stall.employees.order(name: :asc), :id, :name, options = {}, html_options = {class: "form-control"}%>
    </div>
    <div class="col-xl-3 col-lg-6 mb-2 pt-md-3">
      <div class="row">
        <div class="col-6">
          <p class="d-md-none font-weight-bold">Turno</p>
          <%= f.collection_select :shift_id, @stall.payment.shifts.order(name: :asc), :id, :name, options = {}, html_options = {class: "form-control"}%>
        </div>
        <div class="col-6">
          <p class="d-md-none font-weight-bold">Sub-Puesto</p>
          <%= f.select(:substall, @substalls, {}, { class: "form-control" }) %>
        </div>
      </div>
    </div>
    <div class="col-xl-1 col-lg-6 mb-2 pt-md-3">
      <p class="d-md-none font-weight-bold">Horas</p>
      <%= f.text_field :hours, class: "form-control", placeholder: "3" %>
    </div>
    <div class="col-xl-2 col-lg-6 mb-2 pt-md-3">
      <p class="d-md-none font-weight-bold">Comentarios</p>
      <%= f.text_field :comment, class: "form-control", placeholder: "Cubre turno por permiso de Juan" %>
    </div>
    <div class="col-lg-1 col-md-4 pt-md-3">
       <%= link_to_remove_association "", f, class: "fas fa-trash-alt", id: 'remove_link', style: "color: black" %>
    </div>
  </div>
</div>