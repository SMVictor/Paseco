<div class="row form_fieldset text-center">
  <div  class="col-12 mt-4">
    <legend class="text-left">Distribuci√≥n de Oficiales en <%= @stall.name %></legend>
    <div class="row mt-1 ml-1  mr-1 pt-3 tbl_head d-none d-md-flex text-center" style="">
      <div class="col-12 col-md-2">
        <p class="text-uppercase">Fecha</p>
      </div>
      <div class="col-12 col-md-2">
        <p class="text-uppercase">Empleado</p>
      </div>
      <div class="col-12 col-md-2">
        <p class="text-uppercase">Turno</p>
      </div>
      <div class="col-12 col-md-2">
        <p class="text-uppercase">Sub-Puesto</p>
      </div>
      <div class="col-12 col-md-3">
        <p class="text-uppercase">Comentarios</p>
      </div>
      <div class="col-12 col-md-1">
        <p class="text-uppercase">Acciones</p>
      </div>
    </div>
    <div class="role_lines-fields mt-4">
      <%= form.fields_for :role_lines, @role.role_lines.where(stall_id: @stall.id).order(:employee_id, date: :asc) do |role_line| %>
        <%= render 'admin/roles/partials/role_line_fields', f: role_line %>
      <%end%>
    </div>
    <div class="row ml-1 mr-1 tbl_row">
      <div class="col-12 text-center p-2 tbl_footer">
        <%= link_to_add_association ' + Agregar Linea', form, :role_lines, data: { association_insertion_mode: '.role_lines.fields', partial: 'role_line_fields'}, class: 'btn add_btn' %>
      </div>
    </div>
  </div>
</div>