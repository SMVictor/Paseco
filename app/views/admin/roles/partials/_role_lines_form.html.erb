<%= form_for(@role, :remote => true, url: admin_edit_role_lines_path(@role), html: {multipart: true}) do |form| %>
  <div class="row form_fieldset text-center">
    <div  class="col-12 mt-4">
      <div class="row mt-1 ml-1  mr-1 pt-3 tbl_head d-none d-md-flex text-center">
        <div class="col-12 col-md-1">
          <p class="text-uppercase">Día</p>
        </div>
        <div class="col-12 col-md-2">
          <p class="text-uppercase">Fecha</p>
        </div>
        <div class="col-12 col-md-2">
          <p class="text-uppercase">Turno</p>
        </div>
        <div class="col-12 col-md-2">
          <p class="text-uppercase">Sub-Puesto</p>
        </div>
        <div class="col-12 col-md-4">
          <p class="text-uppercase">Comentarios</p>
        </div>
        <div class="col-12 col-md-1">
          <p class="text-uppercase">Acciones</p>
        </div>
      </div>
      <div class="role_lines-fields mt-4">
        <%= form.fields_for :role_lines, @role_lines do |role_line| %>
          <%= render 'admin/roles/partials/role_line_fields', f: role_line %>
        <%end%>
      </div>
      <div class="row ml-1 mr-1 tbl_row">
        <div class="col-12 text-center p-2 tbl_footer">
          <%= link_to_add_association ' + Agregar Linea', form, :role_lines, data: { association_insertion_mode: '.role_lines.fields', partial: 'role_line_fields'}, class: 'btn add_btn' %>
        </div>
      </div>
    </div>
  </div>
  <% if current_user.admin? %>
    <%= form.submit "Guardar", class: "btn btn-success mt-4" %>
  <% else %>
    <%= form.submit "Guardar",  id: "submit", data: { confirm: 'Debe enviar su solicitud hasta estar completamente seguro de haber hecho todas las modificaciones requeridas, ya que una vez enviada se borrarán todos los cambios realizados. ¿Desea completar esta acción?' }, class: "btn btn-success mt-4" %>
  <% end %>
  <%= link_to('Cancelar', edit_admin_role_path(@role), class: 'btn btn-light ml-sm-3 mt-4')%>
<% end %>

<script type="text/javascript">
  getDayName();
</script>