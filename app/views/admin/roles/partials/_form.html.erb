<div class="card">
  <div class="card-body">
    <div class="row form_fieldset">
      <div  class="col-12 p-3">
        <legend>Información General</legend>
      </div>
      <div class="col-xl-4 col-lg-6 mb-2 mt-2">
        <label for="">Nombre:</label>
        <%= form.text_field :name, id: "name", class: "form-control", placeholder: "Planilla de Diciembre" %>
        <label id="name_error"></label>
      </div>
      <div class="col-xl-4 col-lg-6 mt-2">
        <label for="">Fecha de Inicio:</label>
        <%= form.text_field :start_date, id: "start_date", placeholder: "dd / mm / aaaa", autocomplete: "off", class: "form-control", "data-date-format": 'dd/mm/yyyy', "data-provide": 'datepicker' %>
        <label id="start_date_error"></label>
      </div>
      <div class="col-xl-4 col-lg-6 mt-2">
        <label for="">Fecha de Finalización</label>
        <%= form.text_field :end_date, id: "end_date", placeholder: "dd / mm / aaaa", autocomplete: "off", class: "form-control", "data-date-format": 'dd/mm/yyyy', "data-provide": 'datepicker' %>
        <label id="end_date_error"></label>
      </div>
    </div>

    <%= form.hidden_field :stall_ids, value: [] %>

    <% if @role.stalls.size > 0 %>
      <div  class="col-12 p-3">
        <legend>Lista de Puestos</legend>
      </div>
      <div class="row ml-1 mr-1 tbl_row text-center"  style="border-top:1px solid;">
      <% @role.stalls.order(name: :asc).each do |stall| %>
          <div class="col-6 col-sm-4 col-xl-2 pt-md-3">
            <%= link_to(stall.name,admin_role_lines_path(@role, stall), class:'' ) %>
          </div>
      <% end %>
      </div>
    <%end %>
    <%= form.submit "Guardar", id: 'btn_submit', class: "btn btn-success mt-4" %>
    <%= link_to('Cancelar', admin_roles_path, class: 'btn btn-light ml-sm-3 mt-4')%>
  </div>
</div>
<script type="text/javascript">
  onInput("name");
  onInput("start_date");
  onInput("end_date");
</script>