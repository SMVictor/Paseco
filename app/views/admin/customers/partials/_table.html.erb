<div class="card-body">
  <div class="row mt-1 d-none d-md-flex text-center" style="">
    <div class="th col-12 col-md-1">
      <p class="text-uppercase">#</p>
    </div>
    <div class="th col-12 col-md-4">
      <p class="text-uppercase">Cédula Jurídica</p>
    </div>
    <div class="th col-12 col-md-4">
      <p class="text-uppercase">Nombre</p>
    </div>
    <div class="th col-12 col-md-3">
      <p class="text-uppercase">Acciones</p>
    </div>
  </div>
  <% if @customers%>
    <% @customers.each_with_index do |customer, index| %>
      <div class="row tb_body">
        <div class="td col-12 col-md-1  pt-md-3">
          <p class="d-md-none font-weight-bold">Número:</p>
          <p class="text-md-center mt-2"><%= index + 1 %></p>
        </div>
        <div class="td col-12 col-md-4  pt-md-3">
          <p class="d-md-none font-weight-bold">Cédula Jurídica:</p>
          <p class="text-md-center mt-2"><%= link_to(customer.legal_document, admin_customer_path(customer), class:'', title: 'Ver Cliente')%></p>
        </div>
        <div class="th col-12 col-md-4 pt-md-3">
          <p class="d-md-none font-weight-bold">Nombre:</p>
          <p class="text-md-center mt-2"><%= customer.tradename %></p>
        </div>
        <div class="th text-center col-md-3">
          <div class="mt-2 mb-2 btn-group">
            <%= link_to(edit_admin_customer_path(customer), class:'btn primary-btn', title: 'Editar Cliente') do %>
              <i class="fa fa-pencil-alt"></i>
            <% end -%>
            <button type="button" class="btn delete-btn" data-toggle="modal" title="Eliminar Cliente" data-target="#deleteCustomer<%= customer.id %>">
              <i class="fa fa-times"></i>
            </button>
          </div>
        </div>
      </div>
      <%= render 'admin/customers/partials/delete_modal', customer: customer %>
    <% end %>
  <%end %>
</div>