<div class="card">
  <div class="card-body">
    <div class="row mt-1 ml-1  mr-1 pt-3 tbl_head d-none d-md-flex text-center" style="">
      <div class="col-12 col-md-3">
        <p class="text-uppercase">Cédula Juridica</p>
      </div>
      <div class="col-12 col-md-4">
        <p class="text-uppercase">Nombre</p>
      </div>
      <div class="col-12 col-md-5">
        <p class="text-uppercase">Acciones</p>
      </div>
    </div>
    <% if @customers%>
      <% @customers.each do |customer| %>
        <div class="row ml-1 mr-1 tbl_row"  style="">
          <div class="col-12 col-md-3 pt-md-3">
            <p class="d-md-none font-weight-bold">Cedula Jurídica</p>
            <p class="text-md-center"><%= customer.legal_document %></p>
          </div>
          <div class="col-12 col-md-4  pt-md-3">
            <p class="d-md-none font-weight-bold">Nombre</p>
            <p class="text-md-center"><%= customer.tradename %></p>
          </div>
          <div class="col-12 col-md-5">
            <p class="d-sm-none font-weight-bold">Acciones</p>
            <div class="row">
              <div class="col-11 d-flex justify-content-center">
                <%= link_to('Ver',admin_customer_path(customer), class:'btn btn-block info-btn mt-2 mb-lg-2' )%>
                <%= link_to('Editar',edit_admin_customer_path(customer), class:'btn btn-block primary-btn mt-2 ml-2 mb-lg-2' )%>
                <button type="button" class="btn btn-block delete-btn ml-2 mb-lg-2" data-toggle="modal" data-target="#deleteCustomer<%= customer.id %>">Borrar</button>
              </div>
            </div>
          </div>
        </div>
        <%= render 'admin/customers/partials/delete_modal', customer: customer %>
      <% end %>
      <div class="row mt-2 ml-1 mr-1 pt-2 tbl_footer"  style="">
        <div class="col-12 text-center p-2">
          <%= link_to('+ Nuevo Cliente ', new_admin_customer_path, class: '')%>
        </div>
      </div>
    <%end %>
  </div>
</div>