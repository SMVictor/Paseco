<div class="card-body">
  <div class="row mt-1 d-none d-md-flex text-center" style="">
    <div class="th col-12 col-md-4">
      <p class="text-uppercase">Cédula Jurídica</p>
    </div>
    <div class="th col-12 col-md-4">
      <p class="text-uppercase">Nombre</p>
    </div>
    <div class="th col-12 col-md-4">
      <p class="text-uppercase">Acciones</p>
    </div>
  </div>
  <% if @customers%>
    <% @customers.each do |customer| %>
      <div class="row tb_body">
        <div class="td col-12 col-md-4  pt-md-3">
          <p class="d-md-none font-weight-bold">Cédula Jurídica:</p>
          <p class="text-md-center mt-2"><%= link_to(customer.legal_document, admin_show_inactive_customer_path(customer), class:'', title: 'Ver Cliente')%></p>
        </div>
        <div class="th col-12 col-md-4 pt-md-3">
          <p class="d-md-none font-weight-bold">Nombre:</p>
          <p class="text-md-center mt-2"><%= customer.tradename %></p>
        </div>
        <div class="th text-center col-md-4">
          <div class="mt-2 mb-2 btn-group">
            <%= link_to(admin_edit_inactive_customer_path(customer), class:'btn btn-block primary-btn mt-2', title: 'Editar Cliente') do %>
              <i class="fa fa-pencil-alt"></i>
            <% end -%>
            <button type="button" class="btn btn-block delete-btn" data-toggle="modal" title="Eliminar Cliente" data-target="#deleteCustomer<%= customer.id %>">
              <i class="fa fa-times"></i>
            </button>
          </div>
        </div>
      </div>
      <%= render 'admin/customers/partials/delete_inactive_modal', customer: customer %>
    <% end %>
  <%end %>
</div>