<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h3 class="flex-sm-fill font-size-h2 font-w400 mt-2 mb-0 mb-sm-2">Crear Usuario</h3>
            <nav class="flex-sm-00-auto ml-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <%= link_to('Usuarios', admin_users_path, class: 'breadcrumb-item')%>
                    <li class="breadcrumb-item active" aria-current="page">Crear Usuario</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
  <div class="col-sm-12">
    <%= form_for(@user, url: admin_users_path(@user), html: {multipart: true, onsubmit:"return validateUserForm()"}) do |form| %>
      <div class="card">
        <div class="card-body">
          <%= render 'admin/users/partials/form', form: form %>
        </div>
      </div>
    <% end %>
  </div>
</div>