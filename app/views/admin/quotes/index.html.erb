<div class="bg-body-light">
  <div class="content content-full">
    <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
      <h1 class="flex-sm-fill font-size-h2 font-w400 mt-2 mb-0 mb-sm-2">Cotizaciones</h1>
      <%= link_to(new_admin_quote_path, class: 'btn btn-success flex-sm-00-auto ml-sm-3') do %>
        <i class="fa fa-fw fa-plus mr-1"></i>Crear Cotización
      <% end %>
    </div>
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fade show mt-4 d-flex justify-content-center" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
</div>
<div class="card">
  <div class="col-12">
    <input type="text" type="text" style="border: 1px solid #DFE9DF" class="col-md-4 mt-4 text-center" id="quote" name="quote[quote_filter]" placeholder="Filtrar por número ó cliente" title="Ingrese su búsqueda y precione 'entrar' o deje en blanco y precione 'entrar' para mostrar el listado completo" onchange="filterQuote()" data-quotes="<%= Quote.all.to_json %>">
  </div>
<div id="quotesTable"><%= render 'admin/quotes/partials/table', locals: {quotes:  @quotes}%></div>
