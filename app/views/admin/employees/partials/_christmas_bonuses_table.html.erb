<div class="row mt-1 d-none d-md-flex text-center" style="">
  <div class="th col-12 col-md-4">
    <p class="text-uppercase">Periodo</p>
  </div>
  <div class="th col-12 col-md-4">
    <p class="text-uppercase">Monto</p>
  </div>
  <div class="th col-12 col-md-4">
    <p class="text-uppercase">Acciones</p>
  </div>
</div>
<% if @employee.christmas_bonifications %>
  <% @employee.christmas_bonifications.each do |bonus| %>
    <div class="row tb_body">
      <div class="td col-12 col-md-4  pt-md-3">
        <p class="d-md-none font-weight-bold">Periodo:</p>
        <p class="text-md-center mt-2"><%= bonus.from_date.to_date.year.to_s+"-"+ bonus.to_date.to_date.year.to_s %></p>
      </div>
      <div class="th col-12 col-md-4 pt-md-3">
        <p class="d-md-none font-weight-bold">Monto</p>
        <p class="text-md-center mt-2"><%= number_to_currency(bonus.total, unit: 'â‚¡') %></p>
      </div>
      <div class="th text-center col-md-4">
        <div class="mt-2 mb-2 btn-group">
          <% if current_user.admin? || current_user.supervisor? %>
            <%= link_to(admin_edit_bonuses_path(@employee, bonus), class:'btn btn-block primary-btn mt-2', title: 'Editar Empleado') do %>
              <i class="fa fa-pencil-alt"></i>
            <% end -%>
          <% else %>
            <p class="text-md-center mt-2">No hay acciones permitidas</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<%end %>
