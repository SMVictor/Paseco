<div class="card">
  <div class="card-body">
    <div class="row mt-1 d-none d-md-flex text-center" style="">
      <div class="th col-12 col-md-4">
        <p class="text-uppercase">Cédula</p>
      </div>
      <div class="th col-12 col-md-4">
        <p class="text-uppercase">Nombre</p>
      </div>
      <div class="th col-12 col-md-4">
        <p class="text-uppercase">Acciones</p>
      </div>
    </div>
    <% if @employees%>
      <% @employees.each do |employee| %>
        <div class="row tb_body">
          <div class="td col-12 col-md-4  pt-md-3">
            <p class="d-md-none font-weight-bold">Cédula:</p>
            <p class="text-md-center mt-2"><%= link_to(employee.identification, admin_show_inactive_employee_path(employee), class:'', title: 'Ver Empleado')%></p>
          </div>
          <div class="th col-12 col-md-4 pt-md-3">
            <p class="d-md-none font-weight-bold">Nombre:</p>
            <p class="text-md-center mt-2"><%= employee.name %></p>
          </div>
          <div class="th text-center col-md-4">
            <div class="mt-2 mb-2 btn-group">
              <% if current_user.admin? || current_user.manager? %>
                <%= link_to(admin_edit_inactive_employee_path(employee), class:'btn btn-block primary-btn mt-2', title: 'Editar Empleado') do %>
                  <i class="fa fa-pencil-alt"></i>
                <% end -%>
                <button type="button" class="btn btn-block delete-btn" data-toggle="modal" title="Eliminar Empleado" data-target="#deleteEmployee<%= employee.id %>">
                  <i class="fa fa-times"></i>
                </button>
              <% else %>
                <p class="text-md-center mt-2">No hay acciones permitidas</p>
              <% end %>
            </div>
          </div>
        </div>
        <%= render 'admin/employees/partials/inactive_delete_modal', employee: employee %>
      <% end %>
    <%end %>
  </div>
</div>