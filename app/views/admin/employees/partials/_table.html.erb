<div class="card">
  <div class="card-body">
    <div class="row mt-1 d-none d-md-flex text-center" style="">
      <div class="th col-12 col-md-1">
        <p class="text-uppercase">#</p>
      </div>
      <div class="th col-12 col-md-4">
        <p class="text-uppercase">Cédula</p>
      </div>
      <div class="th col-12 col-md-4">
        <p class="text-uppercase">Nombre</p>
      </div>
      <div class="th col-12 col-md-3">
        <p class="text-uppercase">Acciones</p>
      </div>
    </div>
    <% if @employees%>
      <% @employees.each_with_index do |employee, index| %>
        <div class="row tb_body">
          <div class="td col-12 col-md-1  pt-md-3">
            <p class="d-md-none font-weight-bold">Número:</p>
            <p class="text-md-center mt-2"><%= index + 1 %></p>
          </div>
          <div class="td col-12 col-md-4  pt-md-3">
            <p class="d-md-none font-weight-bold">Cédula:</p>
            <p class="text-md-center mt-2"><%= link_to(employee.identification, admin_employee_path(employee), class:'', title: 'Ver Empleado')%></p>
          </div>
          <div class="th col-12 col-md-4 pt-md-3">
            <p class="d-md-none font-weight-bold">Nombre:</p>
            <p class="text-md-center mt-2"><%= employee.name %></p>
          </div>
          <div class="th text-center col-md-3">
            <div class="mt-2 mb-2 btn-group">
              <%= link_to(edit_admin_employee_path(employee), class:'btn primary-btn', title: 'Editar Empleado') do %>
                <i class="fa fa-pencil-alt"></i>
              <% end -%>
              <button type="button" class="btn delete-btn" data-toggle="modal" title="Eliminar Empleado" data-target="#deleteEmployee<%= employee.id %>">
                <i class="fa fa-times"></i>
              </button>
            </div>
          </div>
        </div>
        <%= render 'admin/employees/partials/delete_modal', employee: employee %>
      <% end %>
    <%end %>
  </div>
</div>