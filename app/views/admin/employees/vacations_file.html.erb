	           <th class="pt-3" style="font-size: 16px; border: 1px solid;"><%= @end_date %></th>
	           <th class="pt-3" style="font-size: 16px; width: 389px; border: 1px solid;"><%= (Date.parse(@end_date) + 1.days).strftime('%d/%m/%Y') %></th>
	         </tr>
	       </tbody>
	     </table>
	   </div>
      </div>
      <div class="row text-center">
       <div id="table3" class="table-responsive">
