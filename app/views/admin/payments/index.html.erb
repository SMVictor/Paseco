      <% if @payments.length > 10%>
        <%= link_to('Nuevo Puesto', new_admin_payment_path, class: 'btn primary-btn d-sm-inline')%>
      <% end -%>
  </div>
</div>
<div class="row justify-content-center" >
  <div class="col-12 col-md-9" style="">
    <div class="row justify-content-center">
      <div class="col-12 m-2">
        <div id="paymentTable"><%= render 'admin/payments/partials/table', locals: {payments:  @payments}%></div>
      </div>
    </div>
  </div>
</div>