<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-sm-fill font-size-h2 font-w400 mt-2 mb-0 mb-sm-2">Editar Pago</h1>
            <nav class="flex-sm-00-auto ml-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <%= link_to('Pagos', admin_payments_path, class: 'breadcrumb-item')%>
                    <li class="breadcrumb-item active" aria-current="page">Editar Pago</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
  <div class="col-sm-12">
    <%= form_for(@payment, url: admin_payment_path(@payment), html: {multipart: true, onsubmit:"return validatePaymentForm()"}) do |form| %>
      <%= render 'admin/payments/partials/form', form: form %>
    <% end %>
  </div>
</div>