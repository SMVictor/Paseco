<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Business name</th>
      <th>Tradename</th>
      <th>Representativr</th>
      <th>Representative name</th>
      <th>Legal document</th>
      <th>Legal document</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Payment method</th>
      <th>Payment conditions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.business_name %></td>
        <td><%= customer.tradename %></td>
        <td><%= customer.representativr_id %></td>
        <td><%= customer.representative_name %></td>
        <td><%= customer.legal_document %></td>
        <td><%= customer.legal_document %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.email %></td>
        <td><%= customer.contact %></td>
        <td><%= customer.payment_method %></td>
        <td><%= customer.payment_conditions %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

